<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                             https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    <display-name>Servlet</display-name>
    <welcome-file-list>
        <welcome-file>view/pages/formLogin.jsp</welcome-file>
    </welcome-file-list>
    <listener>
        <listener-class>org.jboss.weld.environment.servlet.Listener</listener-class>
    </listener>
    <filter>
        <filter-name>MDCFilter</filter-name>
        <filter-class>com.dev.servlet.adapter.in.web.filter.MDCFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MDCFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>RateLimitFilter</filter-name>
        <filter-class>com.dev.servlet.adapter.in.web.filter.RateLimitFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RateLimitFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>SecurityPasswordEncryptionFilter</filter-name>
        <filter-class>com.dev.servlet.adapter.in.web.filter.PasswordEncryptFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SecurityPasswordEncryptionFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>CsrfFilter</filter-name>
        <filter-class>com.dev.servlet.adapter.in.web.filter.CsrfFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CsrfFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>SecurityXSSFilter</filter-name>
        <filter-class>com.dev.servlet.adapter.in.web.filter.XSSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SecurityXSSFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>SecurityAuthFilter</filter-name>
        <filter-class>com.dev.servlet.adapter.in.web.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SecurityAuthFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
</web-app>