<configuration>

    <!-- Pattern com correlationId -->
    <property name="PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} [%X{correlationId:-NO_CID}] - %msg%n"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <pattern>${PATTERN}</pattern>
            </layout>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Rolling File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${user.dir}/logs/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <pattern>${PATTERN}</pattern>
            </layout>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Audit Log (separado) -->
    <appender name="AUDIT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${user.dir}/logs/audit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/audit.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>
    <appender name="AUDIT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${user.dir}/logs/audit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/audit.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <logger name="com.dev.servlet.service.internal.AuditServiceImpl" level="INFO" additivity="true">
        <appender-ref ref="AUDIT"/>
    </logger>
    <logger name="com.dev.servlet.web.dispatcher.impl.LogExecutionTimeInterceptor" level="INFO"/>
    <logger name="com.dev.servlet.web.dispatcher.impl.ServletDispatcherImpl" level="WARN"/>
    <logger name="com.dev.servlet.core.util.CacheUtils" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.hibernate.SQL" level="OFF"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="OFF"/>
    <logger name="org.hibernate.engine.internal.StatisticalLoggingSessionEventListener" level="WARN"/>

    <logger name="io.netty" level="WARN"/>
    <logger name="org.apache.activemq" level="WARN"/>
    <!-- Logger para Weld -->
    <logger name="org.jboss.weld" level="WARN"/>
    <!-- hikarycp -->
    <logger name="com.zaxxer.hikari" level="WARN"/>
    <!-- Logger para ehcache -->
    <logger name="net.sf.ehcache" level="WARN"/>
    <logger name="org.ehcache" level="WARN"/>
    <!-- Logger para com.mchange (connection pool) -->
    <logger name="com.mchange" level="WARN"/>
    <logger name="org.apache.commons" level="ERROR"/>
    <!-- Root Logger -->
    <root level="WARN">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
