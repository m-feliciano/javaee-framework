<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="
               https://jakarta.ee/xml/ns/persistence
               https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="servletpu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>

        <properties>
            <property name="hibernate.generate_statistics" value="false"/>
            <!-- Optional: log slow queries only if needed -->
            <!-- <property name="hibernate.session.events.log.LOG_QUERIES_SLOWER_THAN_MS" value="100"/> -->

            <property name="hibernate.connection.provider_class"
                      value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider"/>

            <property name="hibernate.hikari.minimumIdle" value="2"/>
            <property name="hibernate.hikari.maximumPoolSize" value="10"/>
            <property name="hibernate.hikari.connectionTimeout" value="30000"/>
            <property name="hibernate.hikari.idleTimeout" value="300000"/>
            <property name="hibernate.hikari.maxLifetime" value="900000"/>
            <property name="hibernate.hikari.keepaliveTime" value="300000"/>
            <property name="hibernate.hikari.poolName" value="ServletsHikariPool"/>

            <!-- Optional: enable TEMPORARILY for leak detection -->
            <property name="hibernate.hikari.leakDetectionThreshold" value="20000"/>

            <property name="hibernate.cache.use_query_cache" value="true"/>
            <property name="hibernate.cache.region.factory_class"
                      value="org.hibernate.cache.jcache.JCacheRegionFactory"/>
            <property name="hibernate.jakarta.cache.provider"
                      value="org.ehcache.jsr107.EhcacheCachingProvider"/>
            <property name="hibernate.jakarta.cache.uri" value="ehcache.xml"/>
            <property name="hibernate.jakarta.cache.missing_cache_strategy" value="create"/>
        </properties>
    </persistence-unit>
</persistence>